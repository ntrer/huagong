<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
     android:layout_marginBottom="@dimen/dp_15"
    android:layout_width="match_parent"
    android:background="@drawable/linear_border2"
    android:layout_height="@dimen/dp_104">

    <RelativeLayout
        android:id="@+id/kehumingcheng"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gongyingshangmingcheng_text"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户名称"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor"
            />

        <TextView
            android:id="@+id/chuangjianshijian"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/textColor3"
            />

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_below="@id/kehumingcheng"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@drawable/shape_line_dash"
        android:layerType="software"
        />

    <RelativeLayout
        android:layout_below="@+id/line"
        android:id="@+id/shouhuodizhi"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
           android:layout_marginTop="@dimen/dp_5"
           android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor3"
            />

        <TextView
            android:id="@+id/shouhuodizhi_text"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:text="河南省安阳市文峰区万达中心720"
            android:maxLines="2"
            android:textSize="12sp"
            android:textColor="@color/textColor3"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/shouhuodizhi"
        android:id="@+id/lianxiren"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor3"
            />

        <TextView
            android:id="@+id/lianxiren_text"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="张三"
            android:textSize="12sp"
            android:textColor="@color/textColor3"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/lianxiren"
        android:id="@+id/shoujihao"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor3"
            />

        <TextView
            android:id="@+id/shoujihao_text"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="18637280068"
            android:textSize="12sp"
            android:textColor="@color/textColor3"
            />

    </RelativeLayout>



</RelativeLayout>