<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/linear_border2"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_88">


    <RelativeLayout
        android:id="@+id/xingming"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor"
            />


        <TextView
            android:id="@+id/xingming_text"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:text="张三"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/md_blue_500"
            />

        <TextView
            android:id="@+id/quanxian1"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="允许登录"
            android:textSize="@dimen/sp_12"
            android:textColor="#61DAA5"
            />

        <TextView
            android:id="@+id/quanxian2"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="不允许登录"
            android:textSize="12sp"
            android:textColor="#FD6766"
            android:visibility="gone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/first"
        android:layout_below="@+id/xingming"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dengluzhanghao"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="登录账号:"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor3"
            />

        <TextView
            android:id="@+id/dengluzhanghao_text"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dengluzhanghao"
            android:text=""
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor3"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/second"
        android:layout_below="@+id/first"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dengluming"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录名:"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor3"
            />

        <TextView
            android:id="@+id/dengluming_text"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dengluming"
            android:text=""
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor3"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/third"
        android:layout_below="@+id/second"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chuangjianshijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:text="创建时间:"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/chuangjianshijian_text"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chuangjianshijian"
            android:text=""
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor3"
            />

    </RelativeLayout>


    <ImageView
        android:layout_alignParentEnd="true"
        android:id="@+id/right_arrow"
        android:layout_width="@dimen/dp_7"
        android:layout_height="@dimen/dp_11"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@mipmap/right_arrow"
        />

</RelativeLayout>