<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CollapsedAppBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="UpdateUserEditText" parent="Theme.AppCompat.Light">
         <item name="colorControlNormal">#066FB3</item>
        <item name="colorControlActivated">#066FB3</item>
    </style>


    <!--android:windowIsTranslucent设为true，这样可以解决切换activity时的黑屏-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowAnimationStyle">@style/ActivityInOutAnimation</item>
    </style>

    <style name="AppTheme.NoActionBar2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityInOutAnimation</item>
        <item name="searchViewStyle">@style/Widget.SearchView</item>
    </style>

    <style name="AppTheme.NoActionBar4">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/md_black_1000</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityInOutAnimation</item>
        <item name="searchViewStyle">@style/Widget.SearchView</item>
    </style>


    <style name="AppTheme.NoActionBar3">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!--DetailActivity的开启动画,退出activity的动画效果不起作用，要在java代码里写-->
    <style name="ActivityInOutAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_in</item>
    </style>

    <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">#FFCC00</item>
    </style>

    <style name="TabLayoutTextSizeStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>//全屏即无通知栏
    </style>

    <!--Toolbar标题文字大小-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item> <!--  修改字体大小-->
    </style>

    <!--日常客户新建、活动客户新建-->
    <style name="activity_customer_create_tv_style" parent="@android:style/Widget">
        <item name="android:layout_width">@dimen/dp_100</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dp_32</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">#1A1A1A</item>
    </style>

    <style name="activity_customer_create_tv_style2" parent="@android:style/Widget">
        <item name="android:layout_width">@dimen/dp_100</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dp_32</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


    <!--日常客户新建、活动客户新建-->
    <style name="activity_customer_create_tv_style3" parent="@android:style/Widget">
        <item name="android:layout_width">@dimen/dp_100</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">#1A1A1A</item>
    </style>



    <style name="activity_customer_create_et_style" parent="@android:style/Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dp_25</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColorHint">#C3C3C3</item>
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>


    <style name="activity_customer_create_et_style2" parent="@android:style/Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dp_25</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColorHint">#C3C3C3</item>
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>



    <style name="activity_common_customer_detail_tv_style" parent="@android:style/Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dp_25</item>
        <item name="android:layout_marginRight">@dimen/dp_32</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>

    <!--对话框样式-->
    <style name="dialog_style" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!--白底灰框可点击文本样式-->
    <style name="default_clickable_textview_style" parent="@android:style/Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dp_20</item>
        <item name="android:paddingRight">@dimen/dp_20</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:background">@drawable/textview_shap_stoke_gray_selector</item>
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <!--横向分割线-->
    <style name="activity_register_v_horizontal_divider" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:layout_marginRight">@dimen/dp_5</item>
        <item name="android:background">#eee</item>
    </style>

    <style name="activity_register_btn_submit" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_35</item>
        <item name="android:layout_marginTop">@dimen/dp_48</item>
        <item name="android:layout_marginLeft">@dimen/dp_25</item>
        <item name="android:layout_marginRight">@dimen/dp_25</item>
        <item name="android:text">提交</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:background">@drawable/register_btn_bg_selector</item>
    </style>

    <style name="activity_register_btn_submit2" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginLeft">@dimen/dp_25</item>
        <item name="android:layout_marginRight">@dimen/dp_25</item>
        <item name="android:text">退出登录</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:background">@drawable/register_btn_bg_selector</item>
    </style>

    <style name="activity_register_btn_submit3" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginLeft">@dimen/dp_25</item>
        <item name="android:layout_marginRight">@dimen/dp_25</item>
        <item name="android:text">前往联盟</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:background">@drawable/register_btn_bg_selector</item>
    </style>

    <style name="activity_register_btn_quitCard" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginTop">@dimen/dp_48</item>
        <item name="android:layout_marginLeft">@dimen/dp_25</item>
        <item name="android:layout_marginRight">@dimen/dp_25</item>
        <item name="android:text">退卡</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:background">@drawable/register_btn_bg_selector</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@color/sc_transparent_background</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置屏幕变暗 -->
    </style>

    <!-- TitleBar Loading样式 -->
    <style name="LoadPbStyleTitle">
        <item name="android:indeterminateDrawable">@drawable/titlebar_load_progressbar</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:maxWidth">70dp</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:maxHeight">70dp</item>
    </style>

    <style name="loading_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <!-- 设置未浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置无边框 -->
        <item name="android:windowFrame">@null</item>

        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@color/sc_transparent_background</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Widget.SearchView" parent="Widget.AppCompat.SearchView">
        <!--修改搜索框提示文字-->
        <item name="defaultQueryHint">搜索手机号或姓名</item>
        <item name="android:textColor">@color/white</item>
        <!--修改搜索框左边的搜索按钮图标-->
        <item name="searchHintIcon">@null</item>
    </style>


    <style name="ActionSheetDialogStyle" parent="android:Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>
    <!-- 头部字体样式 -->
    <style name="ETitle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/actionsheet_blue</item>
        <item name="android:textSize">@dimen/nav_title_text_size</item>
    </style>

    <style name="AlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- Active thumb color & Active track color(30% transparency)
            switch 打开时的拇指按钮的颜色 轨迹颜色默认为30%这个颜色 -->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <!-- Inactive thumb color switch关闭时的拇指按钮的颜色 -->
        <item name="colorSwitchThumbNormal">@color/gray</item>
        <!-- Inactive track color(30% transparency) switch关闭时的轨迹的颜色  30%这个颜色 -->
        <item name="android:colorForeground">@color/colorPrimary</item>
        <!--使用方法：
        在布局文件中给需要自定义控件中增加app:theme="@style/MySwitch"-->
    </style>

</resources>
