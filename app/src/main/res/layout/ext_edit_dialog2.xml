<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="@dimen/dp_40"
              android:layout_marginRight="@dimen/dp_40"
              android:background="@drawable/dialog_normal_shap"
              android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title_layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ext_dialog_title2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical"
            android:text="标题"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/sp_16"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/ext_dialog_content2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_6"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:hint="填写备注"
        android:enabled="true"
        android:gravity="left"
        android:textSize="@dimen/sp_14"
        android:scrollbars="vertical"
        android:background="@drawable/bg_edit_edit"
       />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#d6d6d6" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ext_dialog_btn2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/extdialog_left_button_style"
            android:text="@string/cancel"
            android:textColor="#4a4a4a"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="#d6d6d6" />

            <Button
                android:id="@+id/sure2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/extdialog_right_button_style"
                android:textColor="#4a4a4a"
                android:text="@string/confirm"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>