                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/textColor3"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginBottom="@dimen/dp_10"
