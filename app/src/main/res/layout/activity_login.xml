<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_w"
    >


    <ImageView
        android:id="@+id/background"
        android:background="@color/app_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_223"/>


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/txt_username"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_width="@dimen/dp_345"
        android:drawablePadding="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_270"
        android:theme="@style/UpdateUserEditText"
        android:hint="请输入用户名"
        android:textColor="@color/color_w"
        android:textColorHint="@color/textColor2"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content"/>


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/txt_password"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_345"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:drawablePadding="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_320"
        android:theme="@style/UpdateUserEditText"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textColor="@color/color_w"
        android:textColorHint="@color/textColor2"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content"/>



    <Button
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/btn_border"
        android:layout_below="@+id/txt_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:text="登录"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_w"
        />




</RelativeLayout>