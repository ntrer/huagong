<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/linear_border2"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/caigou"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/caigoudingdan"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor3"
            />
        <TextView
            android:id="@+id/zhengzaishengchan"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:paddingStart="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_3"
            android:layout_height="@dimen/dp_14"
            android:gravity="center"
            android:text="正在生产"
            android:textSize="@dimen/dp_9"
            android:visibility="gone"
            android:textColor="@color/color_w"
             android:background="@drawable/textview_bg2"
            />

        <TextView
            android:id="@+id/daishenhe"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_14"
            android:gravity="center"
            android:text="待审核"
            android:textSize="@dimen/dp_9"
            android:textColor="@color/color_w"
            android:visibility="gone"
            android:background="@drawable/textview_bg2"
            />

        <TextView
            android:id="@+id/daishengchan"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_14"
            android:gravity="center"
            android:text="待生产"
            android:textSize="@dimen/dp_9"
            android:textColor="@color/color_w"
            android:visibility="gone"
            android:background="@drawable/textview_bg2"
            />

        <TextView
            android:id="@+id/bufenwancheng"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:paddingStart="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_3"
            android:layout_height="@dimen/dp_14"
            android:gravity="center"
            android:text="部分完成"
            android:textSize="@dimen/dp_9"
            android:textColor="@color/color_w"
            android:visibility="gone"
            android:background="@drawable/textview_bg2"
            />
        <TextView
            android:id="@+id/yiwancheng"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_14"
            android:gravity="center"
            android:text="已完成"
            android:textSize="@dimen/dp_9"
            android:textColor="@color/color_w"
            android:visibility="gone"
            android:background="@drawable/textview_bg3"
            />
        <TextView
            android:id="@+id/yiquxiao"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_14"
            android:gravity="center"
            android:text="已取消"
            android:textSize="@dimen/dp_9"
            android:textColor="@color/color_w"
            android:visibility="gone"
            android:background="@drawable/textview_bg5"
            />

        <TextView
            android:id="@+id/shenhebutongguo"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:paddingStart="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_3"
            android:layout_height="@dimen/dp_14"
            android:gravity="center"
            android:text="审核不通过"
            android:textSize="@dimen/dp_9"
            android:textColor="@color/color_w"
            android:visibility="gone"
            android:background="@drawable/textview_bg4"
            />

        <ImageView
            android:layout_alignParentEnd="true"
            android:id="@+id/right_arrow"
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_11"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@mipmap/right_arrow"
            />


    </RelativeLayout>


    <View
        android:id="@+id/line"
        android:layout_below="@id/caigou"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@drawable/shape_line_dash"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layerType="software"
        />


    <RelativeLayout
        android:id="@+id/first"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chuangjianren"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="创建人:"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor2"
            />

        <TextView
            android:id="@+id/chuangjianren_text"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text=""
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor2"
            />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/second"
        android:layout_below="@+id/first"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
        android:id="@+id/chuangjianshijian"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建时间"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/textColor2"
        />

        <TextView
        android:id="@+id/chuangjianshijian_text"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text=""
        android:textSize="@dimen/sp_12"
        android:textColor="@color/textColor2"
        />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/third"
        android:layout_below="@+id/second"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/kehu"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户名称"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor2"
            />

        <TextView
            android:id="@+id/kehu_text"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text=""
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor2"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/four"
        android:layout_below="@+id/third"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/guige"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规格"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor2"
            />

        <TextView
            android:id="@+id/guige_text"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text=""
            android:textSize="@dimen/sp_12"
            android:textColor="@color/textColor2"
            />

    </RelativeLayout>


</RelativeLayout>