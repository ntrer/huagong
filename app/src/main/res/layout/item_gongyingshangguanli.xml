<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:layout_width="match_parent"
    android:background="@drawable/linear_border2"
    android:layout_height="@dimen/dp_85">

    <RelativeLayout
        android:id="@+id/gongyingshangmingcheng"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="供应商名称"
            android:textSize="12sp"
            android:textColor="@color/app_background"
            />

        <TextView
            android:id="@+id/gongyingshangmingcheng_text"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="发放"
            android:textSize="12sp"
            android:textColor="@color/app_background"
            />

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_below="@id/gongyingshangmingcheng"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/shape_line_dash"
        android:layerType="software"
        />

    <RelativeLayout
        android:layout_below="@+id/line"
        android:id="@+id/lianxiren"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
           android:layout_marginTop="@dimen/dp_5"
           android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            />

        <TextView
            android:id="@+id/lianxiren_text"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="发放"
            android:textSize="12sp"
            android:textColor="@color/textColor2"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/lianxiren"
        android:id="@+id/shouji"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            />

        <TextView
            android:id="@+id/shouji_text"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="18637280068"
            android:textSize="12sp"
            android:textColor="@color/textColor2"
            />

    </RelativeLayout>



</RelativeLayout>