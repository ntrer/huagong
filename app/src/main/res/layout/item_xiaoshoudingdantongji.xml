<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/linear_border2"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100">


    <RelativeLayout
        android:id="@+id/xiaoshoudingdan"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/xiaoshoudingdanhao"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:textSize="12sp"
            android:textColor="@color/textColor3"
            />

        <ImageView
            android:layout_alignParentEnd="true"
            android:id="@+id/right_arrow"
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_11"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@mipmap/right_arrow"
            />


    </RelativeLayout>


    <View
        android:id="@+id/line"
        android:layout_below="@id/xiaoshoudingdan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/shape_line_dash"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layerType="software"
        />



    <RelativeLayout
        android:id="@+id/zero"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/kehumingcheng"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户名称"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/textColor2"
            />

        <TextView
            android:id="@+id/kehumingcheng_text"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="杨东"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/textColor2"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/first"
        android:layout_below="@+id/zero"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/xiadanriqi"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单日期"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/textColor2"
            />

        <TextView
            android:id="@+id/xiadanriqi_text"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="2018-10-8 12:30:21"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/textColor2"
            />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/second"
        android:layout_below="@+id/first"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
        android:id="@+id/fahuoriqi"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发货日期"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/textColor2"
        />

        <TextView
        android:id="@+id/fahuoriqi_text"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="2018-10-8 12:30:21"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/textColor2"
        />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/third"
        android:layout_below="@+id/second"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
        android:id="@+id/yifahuoshuliang"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已发货数量:"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/textColor2"
        />

        <TextView
        android:id="@+id/yifahuoshuliang_text"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/sp_10"
        android:text="20"
        android:textColor="@color/textColor2"
        />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/four"
        android:layout_below="@+id/third"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
        android:id="@+id/yingfahuoshuliang"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="应发货数量:"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/textColor2"
        />

        <TextView
        android:id="@+id/yingfahuoshuliang_text"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="2600"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/textColor2"
        />

    </RelativeLayout>



</RelativeLayout>